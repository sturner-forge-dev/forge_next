generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String  @id @default(uuid())
  kindeId   String  @unique
  email     String  @unique
  phone     String?
  firstName String?
  lastName  String?
  role      String  @default("user")
}

model Exercises {
  id          String  @id @default(uuid())
  name        String  @unique
  type        String?
  equipment   String?
  difficulty  String?
  description String?
}
